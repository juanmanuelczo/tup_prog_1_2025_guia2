Proceso positivonegativo
	Definir num como Entero;
	Escribir "Ingrese el número entero";
	Leer num;
	Si num = 0 Entonces
		Escribir "El número ingresado es cero";
	FinSi
	Si num > 0 Entonces
		Escribir "El número ingresado es positivo";
		Finsi
	Si num < 0 Entonces 
		Escribir "El número ingresado es negativo";
		
	FinSi
FinProceso
